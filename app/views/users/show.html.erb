<P>users/show.erb</P>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    　　<ol class="breadcrumb">
        <li><%= link_to "ツイート", @user %></li>
        <li><%= link_to "フォロー", followings_user_path(@user) %></li>
        <li><%= link_to "フォロワー", followers_user_path(@user) %></li>
      </ol>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>
<%= paginate @microposts %>